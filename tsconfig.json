{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "jsx": "react-native",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./src",
    "rootDirs": ["./src"],
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}
